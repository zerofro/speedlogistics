<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zero.logistics.dao.TAddressDao">

    <resultMap type="com.zero.logistics.entity.TAddress" id="TAddressMap">
        <result property="addressId" column="address_id" jdbcType="INTEGER"/>
        <result property="customerId" column="customer_id" jdbcType="INTEGER"/>
        <result property="ownerName" column="owner_name" jdbcType="VARCHAR"/>
        <result property="addressCity" column="address_city" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
    </resultMap>

    <resultMap type="com.zero.logistics.entity.TAddress" id="andCustomerMap">
        <result property="addressId" column="address_id" jdbcType="INTEGER"/>
        <result property="customerId" column="customer_id" jdbcType="INTEGER"/>
        <result property="ownerName" column="owner_name" jdbcType="VARCHAR"/>
        <result property="addressCity" column="address_city" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
        <result property="wxName" column="wx_name"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TAddressMap">
        select
          address_id, customer_id, owner_name, address_city, address, phone, type, state
        from speedlogisticsdb.t_address
        where address_id = #{addressId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TAddressMap">
        select
          address_id, customer_id, owner_name, address_city, address, phone, type, state
        from speedlogisticsdb.t_address
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TAddressMap">
        select
          address_id, customer_id, owner_name, address_city, address, phone, type, state
        from speedlogisticsdb.t_address
        <where>
            <if test="addressId != null">
                and address_id = #{addressId}
            </if>
            <if test="customerId != null">
                and customer_id = #{customerId}
            </if>
            <if test="ownerName != null and ownerName != ''">
                and owner_name = #{ownerName}
            </if>
            <if test="addressCity != null and addressCity != ''">
                and address_city = #{addressCity}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="addressId" useGeneratedKeys="true">
        insert into speedlogisticsdb.t_address(customer_id, owner_name, address_city, address, phone, type, state)
        values (#{customerId}, #{ownerName}, #{addressCity}, #{address}, #{phone}, #{type}, #{state})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update speedlogisticsdb.t_address
        <set>
            <if test="customerId != null">
                customer_id = #{customerId},
            </if>
            <if test="ownerName != null and ownerName != ''">
                owner_name = #{ownerName},
            </if>
            <if test="addressCity != null and addressCity != ''">
                address_city = #{addressCity},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        where address_id = #{addressId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from speedlogisticsdb.t_address where address_id = #{addressId}
    </delete>

    <!--通过类型和顾客Id查询地址列表-->
    <select id="getAddressBook" resultMap="TAddressMap">
        SELECT * FROM `t_address`
        WHERE `type` = #{type} AND `customer_id` = #{customerId}
        <if test="ownerName != null and ownerName != ''">
            AND `owner_name` LIKE CONCAT(#{ownerName}, '%')
        </if>
    </select>

    <!--更新默认地址-->
    <update id="updateDefult">
        UPDATE `t_address` SET `state` = 0 WHERE `state` = 1 AND `customer_id` = #{customerId}
    </update>

    <select id="getCount" parameterType="string" resultType="int">
        SELECT COUNT(1) FROM `t_customer` c,`t_address` a
        WHERE c.`customer_id` = a.`customer_id`
        <if test="condition != null and condition != ''">
            AND (c.`wx_name` LIKE CONCAT(#{condition},'%')
            OR a.`owner_name` LIKE CONCAT(#{condition},'%'))
        </if>
    </select>

    <!--根据条件查询页内容-->
    <select id="pageByCondition" resultMap="andCustomerMap">
        SELECT c.`wx_name`,a.*
        FROM `t_customer` c,`t_address` a
        WHERE c.`customer_id` = a.`customer_id`
        <if test="condition != null and condition != ''">
            AND (c.`wx_name` LIKE CONCAT(#{condition},'%')
            OR a.`owner_name` LIKE CONCAT(#{condition},'%'))
        </if>
        LIMIT #{startRow}, #{pageSize}
    </select>
</mapper>